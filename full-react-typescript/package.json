{
  "name": "react-full-typescript",
  "version": "0.0.0",
  "description": "A simple react starter application based on react-typescript & jest-enzyme & express",
  "main": "server.js",
  "repository": "",
  "author": "michael wheeler",
  "scripts": {
    "dev": "npm-run-all --parallel build-webpack-d nodemon-server browser-sync --sequential reload --parallel reload",
    "build-webpack-p": "webpack --config webpack.config.js -p --env.env=production",
    "build-webpack-d": "webpack --config webpack.config.js --env.env=development",
    "app": "node scripts/ts-node.js",
    "nodemon-server": "node scripts/nodemon.js",
    "browser-sync": "node scripts/browser-sync.js",
    "nodemon-stand-alone": "nodemon app/server/app.js",
    "build": "npm-run-all --parallel  build-webpack-p run-app",
    "dev:iso": "npm-run-all --parallel nodemon:iso build-webpack-d browser-sync",
    "app:iso": "node app/server/app.js --production",
    "test": "jest --watch",
    "tsc": "tsc",
    "nodemon": "nodemon",
    "ts-node": "node scripts/ts-node.js",
    "ts-app": "tsc --p ./tsconfig.backend.json --inlineSourceMap false --inlineSourceMap false",
    "inject-views": "node scripts/pug.js",
    "inject-assets": "node scripts/assets.js",
    "clean": "node scripts/clean.js",
    "build:clean": "npm-run-all clean ts-app inject-views inject-assets"
  },
  "dependencies": {
    "@types/enzyme": "^2.7.6",
    "@types/express": "^4.0.35",
    "@types/node": "^7.0.12",
    "@types/react": "^15.0.20",
    "@types/react-dom": "^0.14.23",
    "@types/react-router": "^3.0.9",
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "mobx": "^3.1.7",
    "mobx-react": "^4.1.3",
    "npm-run-all": "^4.0.2",
    "pug": "^2.0.0-beta11",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2",
    "tslint": "^4.5.1"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.1.2",
    "babel-core": "^6.24.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-do-expressions": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-1": "^6.22.0",
    "browser-sync": "^2.18.8",
    "colors": "^1.1.2",
    "css-loader": "^0.27.3",
    "enzyme": "^2.8.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.4.2",
    "sass-loader": "^6.0.3",
    "source-map-loader": "^0.2.0",
    "style-loader": "^0.15.0",
    "ts-node": "^3.0.2",
    "typescript": "^2.2.2",
    "vorpal": "^1.11.4",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/scripts/jest-preprocessor.js"
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "roots": [
      "./app/components"
    ],
    "testMatch": [
      "**/app/components/**/*.test.ts?(x)",
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/fbjs",
      "<rootDir>/node_modules/enzyme",
      "<rootDir>/node_modules/react-addons-test-utils"
    ]
  }
}
