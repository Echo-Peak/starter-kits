{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "allowSyntheticDefaultImports":true,
        "experimentalDecorators":true
    },
    "include": [
        "./app/server/**/*"
    ],
    "exclude": [
        "app/server/**/*.tsx",
        "node_modules",
        "app/server/static/*.*",
        "app/server/views/*.*"
    ]
}